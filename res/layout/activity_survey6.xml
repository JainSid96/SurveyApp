<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Survey6" >

    <RadioGroup>

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:text="Yes" />

        <RadioButton />
    </RadioGroup>

    <EditText
        android1:id="@+id/editText7"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/button1"
        android1:layout_alignRight="@+id/textView5"
        android1:background="@drawable/edittext"
        android1:ems="10" />

    <Spinner
        android1:id="@+id/spinner1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView7"
        android1:layout_alignRight="@+id/editText7" />

    <TextView
        android1:id="@+id/textView7"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/editText7"
        android1:layout_centerHorizontal="true"
        android1:text="Registration" />

    <TextView
        android1:id="@+id/textView3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/spinner1"
        android1:layout_centerHorizontal="true"
        android1:text="Congession Score" />

    <EditText
        android1:id="@+id/editText5"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView3"
        android1:layout_alignLeft="@+id/editText4"
        android1:layout_marginBottom="14dp"
        android1:background="@drawable/edittext"
        android1:ems="10" />

    <TextView
        android1:id="@+id/textView5"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/editText5"
        android1:layout_centerHorizontal="true"
        android1:text="Artificial material containment" />

    <EditText
        android1:id="@+id/editText4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView5"
        android1:layout_centerHorizontal="true"
        android1:background="@drawable/edittext"
        android1:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android1:id="@+id/textView4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/editText4"
        android1:layout_centerHorizontal="true"
        android1:text="Fresh water or soapy water ?" />

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_centerHorizontal="true"
        android1:background="@null"
        android1:text="Next" />

</RelativeLayout>