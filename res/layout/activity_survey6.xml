<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Survey6" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RadioButton01"
        android:layout_centerHorizontal="true"
        android:text="Fresh water or soapy water ?" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:text="Artificial material containment" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Toilet Service" />

    <RadioButton
        android1:id="@+id/radioButton2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/textView2"
        android1:layout_below="@+id/textView1"
        android1:text="NO" />

    <RadioButton
        android1:id="@+id/radioButton1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/radioButton2"
        android1:layout_alignBottom="@+id/radioButton2"
        android1:layout_toLeftOf="@+id/button1"
        android1:text="YES" />

    <TextView
        android1:id="@+id/textView2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/radioButton2"
        android1:layout_centerHorizontal="true"
        android1:text="Garbage Disposal" />

    <RadioButton
        android1:id="@+id/RadioButton01"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/radioButton1"
        android1:layout_below="@+id/textView2"
        android1:text="YES" />

    <Spinner
        android1:id="@+id/spinner1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView2"
        android1:layout_alignRight="@+id/textView1"
        android1:layout_below="@+id/textView3" />

    <TextView
        android1:id="@+id/textView3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/spinner1"
        android1:layout_below="@+id/editText5"
        android1:text="Congession Score" />

    <TextView
        android1:id="@+id/textView7"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/spinner1"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="24dp"
        android1:text="Registration" />

    <EditText
        android1:id="@+id/editText7"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/editText5"
        android1:layout_below="@+id/textView7"
        android1:background="@drawable/edittext"
        android1:ems="10" />

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/RadioButton02"
        android1:layout_below="@+id/editText7"
        android1:layout_marginTop="21dp"
        android1:background="@null"
        android1:text="Next" />

    <RadioButton
        android1:id="@+id/RadioButton02"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView4"
        android1:layout_alignRight="@+id/textView1"
        android1:text="NO" />

</RelativeLayout>